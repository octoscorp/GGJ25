[sub_resource type="GDScript" id="GDScript_17tlb"]
script/source = "extends AnimatableBody2D

@export var flame : Node2D
@export var bubble_source : BubbleSource

func _physics_process(delta: float) -> void:
	if Input.is_mouse_button_pressed(MOUSE_BUTTON_LEFT):
		position += get_local_mouse_position()*delta*10
	bubble_source.global_position.x = flame.global_position.x
	var dist = bubble_source.global_position.distance_to(flame.global_position)
	
	bubble_source.bubble_cooldown = max(0, remap(dist, 32, 72, 0, 0.2))
	bubble_source.bubbling = dist < 72
	bubble_source.bubble_life_span = randf_range(0.1, remap(dist, 32, 72, 0.5, 0.1))
"

